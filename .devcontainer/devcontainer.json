{
    "name": "Robot Scheduling Research",
    "dockerComposeFile": "../docker-compose.research.yml",
    "service": "research",
    "workspaceFolder": "/app",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-python.isort",
                "ms-python.flake8",
                "ms-python.mypy-type-checker"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black",
                "python.sortImports.args": ["--profile", "black"],
                "jupyter.askForKernelRestart": false,
                "jupyter.interactiveWindow.creationMode": "perFile"
            }
        }
    },
    
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements/simple.txt -r requirements/jupyter.txt",
    
    "mounts": [
        "source=${localWorkspaceFolder}/src,target=/app/src,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/tests,target=/app/tests,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/test_cases,target=/app/test_cases,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/results,target=/app/results,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/notebooks,target=/app/notebooks,type=bind,consistency=cached"
    ],
    
    "forwardPorts": [8888],
    "portsAttributes": {
        "8888": {
            "label": "Jupyter Lab",
            "onAutoForward": "notify"
        }
    }
}
